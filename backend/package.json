{
  "name": "@agent-orchestrator/backend",
  "version": "1.0.0",
  "description": "Backend service for the Agent Orchestrator",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/api/index.ts",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=6144' vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "type-check": "tsc --noEmit",
    "orchestrator": "tsx src/cli/index.ts"
  },
  "keywords": [
    "bmad",
    "orchestrator",
    "backend"
  ],
  "author": "Chris",
  "license": "UNLICENSED",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.30",
    "@anthropic-ai/sdk": "^0.68.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@octokit/rest": "^22.0.1",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^4.25.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.2.0",
    "simple-git": "^3.20.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.56.0",
    "nock": "^14.0.10",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "yaml": "^2.8.1"
  }
}
